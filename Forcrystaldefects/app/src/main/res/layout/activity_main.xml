<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hipo"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/GameButton1"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginBottom="37dp"
        android:layout_marginStart="30dp"
        android:onClick="random_Game1"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@android:drawable/btn_dialog" />

    <ImageButton
        android:id="@+id/GameButton2"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginBottom="97dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:onClick="random_Game2"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toStartOf="@+id/GameButton3"
        app:layout_constraintStart_toEndOf="@+id/GameButton1"
        app:srcCompat="@android:drawable/btn_dialog" />

    <ImageButton
        android:id="@+id/GameButton3"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginBottom="37dp"
        android:layout_marginEnd="30dp"
        android:onClick="random_Game3"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@android:drawable/btn_dialog" />

    <Button
        android:id="@+id/button"
        android:layout_width="170dp"
        android:layout_height="60dp"
        android:layout_marginBottom="135dp"
        android:text="Button"
        android:onClick="Dart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="170dp"
        android:layout_height="60dp"
        android:layout_marginBottom="135dp"
        android:text="Button"
        android:onClick="Game2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="아직도 결정 못했니?\n \n 그렇다면 내가 결정하마 "
        android:textAlignment="center"
        android:textSize="30dp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/GameButton2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="62dp"
        android:layout_marginStart="62dp"
        android:src="@drawable/title"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>